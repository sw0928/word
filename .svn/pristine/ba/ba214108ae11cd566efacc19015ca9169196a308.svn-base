.react-tabs {
  margin: 0;
  padding: 1em;
  font-size: 150%;
  font-weight: 200;
  line-height: 1.5;
}

.react-tabs .hidden {
  display: none;  
}

.react-tabs .react-tab {
  background: rgb(250, 250, 250);
  margin: 1em auto;
  border: 1px solid #ddd;
  padding: 1em;
}

.react-tabs tab-content {
  width: 80%;
}

.hidden {
  display: none;
}

.react-tabs ul{
  margin: 0;
  padding: 0;
  list-style-type: none;
  text-align: center;
}

.react-tabs ul li {
  display: inline;
}

.react-tabs a {
  text-decoration: none;
  padding: .5em;
  color: #fff;
  background-color: #ddd;
}

.react-tabs .selected a {
  background-color: #b7b7b7 !important;
  color: #fff !important;
  font-weight: bold;
}

.react-tabs a:hover {
  color: #fff;
  background-color: #b7b7b7;
}
