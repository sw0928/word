<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbar_item"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        />
    <EditText
        android:id="@+id/register_activity_phone"
        android:paddingLeft="@dimen/x20"
        android:textSize="@dimen/y26"
        android:textColorHighlight="@color/RGB_909090"
        android:hint="请输入手机号"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:background="@color/white"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90">
    <EditText
        android:background="@color/white"
        android:id="@+id/register_activity_code"
        android:paddingLeft="@dimen/x20"
        android:textSize="@dimen/y26"
        android:textColorHighlight="@color/RGB_909090"
        android:hint="验证码"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y90"
        />
        <TextView
            android:id="@+id/register_activity_get_code"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/y26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#498ce8"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/register_activity_pwd"
        android:paddingLeft="@dimen/x20"
        android:textSize="@dimen/y26"
        android:textColorHighlight="@color/RGB_909090"
        android:hint="密码 (6~20位字母和数字)"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:background="@color/white"/>

    <EditText
        android:id="@+id/register_activity_reconfirm_pwd"
        android:paddingLeft="@dimen/x20"
        android:textSize="@dimen/y26"
        android:textColorHighlight="@color/RGB_909090"
        android:hint="确认密码"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/y40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <CheckBox
        android:id="@+id/register_activity_checkbox"
        android:textColor="#646464"
        android:textSize="@dimen/y24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我已阅读并同意"
        />
    <TextView
        android:textSize="@dimen/y24"
        android:id="@+id/register_activity_href"
        android:textColor="#646464"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="《52直播服务协议》"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/register_activity_register"
        android:textSize="@dimen/y32"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/y40"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/y90"
        android:text="注册"
        android:gravity="center"
        android:background="@drawable/register_bg"
        />

</LinearLayout>
