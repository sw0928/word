<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_charge"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/back"
            android:layout_marginLeft="@dimen/x20"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="@dimen/y1"/>
    <TextView
        android:id="@+id/count"
        android:layout_marginTop="@dimen/y90"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/y90"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/y40"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/y40"
        android:text="秘豆"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="@dimen/y90"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/wx_pay"
            android:layout_marginLeft="@dimen/x120"
            android:src="@drawable/wx_select"
            android:layout_width="@dimen/x220"
            android:layout_height="@dimen/y60" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x120"
            android:id="@+id/alipay"
            android:src="@drawable/alipay_normal"
            android:layout_width="@dimen/x220"
            android:layout_height="@dimen/y60" />

    </RelativeLayout>

    <GridView
        android:scrollbars="none"
        android:id="@+id/gridview"
        android:horizontalSpacing="@dimen/x20"
        android:verticalSpacing="@dimen/y40"
        android:layout_marginTop="@dimen/y90"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"/>
    <ImageView
        android:id="@+id/charge_now"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:src="@drawable/charge"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
