<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y250"
    android:orientation="horizontal">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/y40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/live_shape_anchor_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.hyphenate.easeui.widget.EaseImageView
            android:layout_width="@dimen/global_height_small"
            android:layout_height="@dimen/global_height_small"
            android:id="@+id/eiv_anchor"
            android:src="@drawable/ease_default_avatar"
            app:ease_shape_type="round"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_margin_mid"
            android:layout_marginRight="@dimen/global_margin_mid"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size1"/>

            <TextView
                android:id="@+id/audience_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/global_margin_small"
            android:background="@drawable/live_shape_follow_bg"
            android:gravity="center"
            android:padding="@dimen/global_margin_mid"
            android:text="关注"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size1"/>
    </LinearLayout>
        <RelativeLayout
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:background="@drawable/live_shape_midou_bg"
            android:layout_marginTop="@dimen/y20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/mi"
                android:textSize="@dimen/y20"
                android:text="秘宝:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/midou_all_count"
                android:textSize="@dimen/y28"
                android:layout_centerVertical="true"
                android:text=""
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/mi"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginRight="@dimen/x90"
        android:layout_marginTop="@dimen/y40"
        android:layout_height="match_parent"
        android:layout_width="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/horizontal_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="54dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right|center_vertical">

        <ImageButton
            android:layout_gravity="center_vertical"
            android:id="@+id/img_bt_switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/live_cam_switch"
            android:visibility="gone"/>


        <ImageButton
            android:layout_gravity="center_vertical"
            android:id="@+id/ib_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/ic_arrow_close"
            android:visibility="invisible"/>
    </LinearLayout>
        <TextView
            android:id="@+id/live_id"
            android:layout_marginTop="@dimen/y70"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直播间id：13234"/>
        <TextView
            android:layout_gravity="right"
            android:id="@+id/live_time"
            android:layout_marginTop="@dimen/y10"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdfa"/>
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>