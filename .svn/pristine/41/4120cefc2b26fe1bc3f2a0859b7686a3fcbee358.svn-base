<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background">
    <RelativeLayout
        android:id="@+id/action_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/qianmingshezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/y36"
            android:text="签名设置"
            android:layout_centerInParent="true"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/autograph_activity_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x24"
            android:layout_width="@dimen/x26"
            android:layout_height="@dimen/y44"
            android:src="@drawable/back"/>
        <TextView
            android:paddingTop="@dimen/y16"
            android:paddingBottom="@dimen/y16"
            android:paddingLeft="@dimen/x34"
            android:paddingRight="@dimen/x34"
            android:layout_marginRight="@dimen/x20"
            android:layout_alignParentRight="true"
            android:id="@+id/autograph_activity_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/y36"
            android:text="保存"
            android:layout_centerInParent="true"
            android:textColor="@color/white"/>
    </RelativeLayout>
           <EditText
               android:id="@+id/autograph_activity_detail"
               android:paddingLeft="@dimen/x20"
               android:gravity="top"
               android:paddingTop="@dimen/y20"
               android:layout_marginLeft="@dimen/x20"
               android:layout_marginRight="@dimen/x20"
               android:layout_marginTop="@dimen/y25"
               android:background="@color/white"
               android:layout_width="@dimen/x710"
               android:layout_height="@dimen/y320"
               android:textColorHint="#999999"
               android:textSize="@dimen/y28"
               android:hint="在这里设置你的个性签名吧"/>
</LinearLayout>