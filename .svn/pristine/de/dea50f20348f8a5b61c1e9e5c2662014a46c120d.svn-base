.react-date-field__calendar-icon:after,
.react-date-field__calendar-icon:before {
  content: '';
  width: 3px;
  height: 6px;
  border-radius: 10px;
  left: 1px;
  top: -6px;
  position: absolute;
  background: gray;
}

.react-date-field__calendar-icon:after {
  left: auto;
  right: 0px;
}

.react-date-field__calendar-icon-inner {
  background: gray;
  position: absolute;
  border-radius: 1px;
  top: 2px;
  left: 2px;
  width: 4px;
  height: 4px;
}
