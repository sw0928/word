$REACT-FLEX_MAX-SIZE: 100 !default;

$PREFIX: 'react-flex-v2';

.#{$PREFIX} {
  display: flex;
}

.#{$PREFIX}--inline {
  display: inline-flex;
}

.#{$PREFIX}--display-flex {
  display: flex;
}

.#{$PREFIX}--display-inline-flex {
  display: inline-flex;
}

/* ALIGN-ITEMS */
.#{$PREFIX}--align-items-center {
  align-items: center;
}
.#{$PREFIX}--align-items-stretch {
  align-items: stretch;
}
.#{$PREFIX}--align-items-baseline {
  align-items: baseline;
}
.#{$PREFIX}--align-items-end,
.#{$PREFIX}--align-items-flex-end {
  align-items: flex-end;
}
.#{$PREFIX}--align-items-start,
.#{$PREFIX}--align-items-flex-start {
  align-items: flex-start;
}

/* ALIGN-SELF */
.#{$PREFIX}--align-self-center {
  align-self: center;
}
.#{$PREFIX}--align-self-stretch {
  align-self: stretch;
}
.#{$PREFIX}--align-self-baseline {
  align-self: baseline;
}
.#{$PREFIX}--align-self-auto {
  align-self: auto;
}
.#{$PREFIX}--align-self-end,
.#{$PREFIX}--align-self-flex-end {
  align-self: flex-end;
}
.#{$PREFIX}--align-self-start,
.#{$PREFIX}--align-self-flex-start {
  align-self: flex-start;
}

/* ALIGN-CONTENT */
.#{$PREFIX}--align-content-center {
  align-content: center;
}
.#{$PREFIX}--align-content-stretch {
  align-content: stretch;
}
.#{$PREFIX}--align-content-around,
.#{$PREFIX}--align-content-space-around {
  align-content: space-around;
}
.#{$PREFIX}--align-content-between,
.#{$PREFIX}--align-content-space-between {
  align-content: space-between;
}
.#{$PREFIX}--align-content-end,
.#{$PREFIX}--align-content-flex-end {
  align-content: flex-end;
}
.#{$PREFIX}--align-content-start,
.#{$PREFIX}--align-content-flex-start {
  align-content: flex-start;
}

/* JUSTIFY-CONTENT */
.#{$PREFIX}--justify-content-start,
.#{$PREFIX}--justify-content-flex-start {
  justify-content: flex-start;
}

.#{$PREFIX}--justify-content-end,
.#{$PREFIX}--justify-content-flex-end {
  justify-content: flex-end;
}
.#{$PREFIX}--justify-content-center {
  justify-content: center;
}
.#{$PREFIX}--justify-content-space-around {
  justify-content: space-around;
}
.#{$PREFIX}--justify-content-space-between {
  justify-content: space-between;
}
/* WRAP */
.#{$PREFIX}--wrap {
  flex-wrap: wrap;
}

/* COLUMN */
.#{$PREFIX}--column {
  flex-direction: column;
}

.#{$PREFIX}--column-reverse {
  flex-direction: column-reverse;
}

/* ROW */
.#{$PREFIX}--row {
  flex-direction: row;
}

.#{$PREFIX}--row-reverse {
  flex-direction: row-reverse;
}

/* FLEX-BASIS */
.#{$PREFIX}--flex-basis-auto {
  flex-basis: auto;
}

.#{$PREFIX}--flex-basis-none,
.#{$PREFIX}--flex-basis-0 {
  flex-basis: 0px;
}

.#{$PREFIX}--flex-basis-fill {
  flex-basis: fill;
}

.#{$PREFIX}--flex-basis-content {
  flex-basis: content;
}

.#{$PREFIX}--flex-basis-fit-content {
  flex-basis: fit-content;
}

.#{$PREFIX}--flex-basis-min-content {
  flex-basis: min-content;
}

.#{$PREFIX}--flex-basis-max-content {
  flex-basis: max-content;
}

/* FLEX */
.#{$PREFIX}--flex-none,
.#{$PREFIX}--flex-0 {
  flex: none;
}

@for $i from 1 through $REACT-FLEX_MAX-SIZE {
  .#{$PREFIX}--flex-#{$i} {
    flex: $i;
  }
}


/* FLEX-GROW */
@for $i from 0 through $REACT-FLEX_MAX-SIZE {
  .#{$PREFIX}--flex-grow-#{$i} {
    flex-grow: $i;
  }
}


/* FLEX-SHRINK */
@for $i from 0 through $REACT-FLEX_MAX-SIZE {
  .#{$PREFIX}--flex-shrink-#{$i} {
    flex-shrink: $i;
  }
}
