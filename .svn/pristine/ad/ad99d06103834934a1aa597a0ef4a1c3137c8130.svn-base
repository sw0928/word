<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <ImageView
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_bg1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_marginTop="@dimen/y110"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y82"
        android:id="@+id/ll_pwd_phone"
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/y200"
        android:divider="@drawable/linearlayou_divider"
        android:showDividers="middle"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shouji"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:text="账号:"
                android:textSize="@dimen/y40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:text=""
                android:background="@null"
                android:id="@+id/login_activity_et_input_phone"
                android:textSize="@dimen/y26"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x40"
                android:hint="请输入账号"
                android:gravity="bottom"
                android:textColorHint="@color/RGB_909090"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="@dimen/x1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mima"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:text="密码:"
                android:textSize="@dimen/y40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:text=""
                android:background="@null"
                android:id="@+id/login_activity_et_input_pwd"
                android:textSize="@dimen/y26"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x40"
                android:hint="请输入密码"
                android:textColorHint="@color/RGB_909090"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="@dimen/x1"/>

    </LinearLayout>

        <ImageView
            android:layout_marginTop="@dimen/y70"
            android:layout_gravity="center_horizontal"
            android:id="@+id/login_activity_login"
            android:src="@drawable/login_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
        android:textSize="@dimen/y34"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/y61"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/y90"
        android:text="登录"
        android:gravity="center"
        android:background="@drawable/login_bg1"
        />

    <RelativeLayout
        android:layout_marginTop="@dimen/y30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="@dimen/x10"
            android:layout_toLeftOf="@+id/line"
            android:id="@+id/login_activity_register"
            android:layout_marginLeft="@dimen/x80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/y26"
            android:textColor="@color/colorPrimary"
            android:text="注册账号"/>
        <View
            android:id="@+id/line"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/y30"
            android:background="@color/colorPrimary"
            />
        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@+id/line"
            android:id="@+id/login_activity_forget_pwd"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/y26"
            android:textColor="@color/colorPrimary"
            android:text="忘记密码"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/y180"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/hengxian"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/login_activity_third_platform"
        android:layout_centerHorizontal="true"
        android:textColor="@color/RGB_909090"
        android:textSize="@dimen/y26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第三方账号登录"/>
    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="@dimen/y40"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qq1"
            android:id="@+id/imageView" />

        <ImageView
            android:layout_marginLeft="@dimen/x120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weixin1"/>
        <ImageView
            android:layout_marginLeft="@dimen/x120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weibo1"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
