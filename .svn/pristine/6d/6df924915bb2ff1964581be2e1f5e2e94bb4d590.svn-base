<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/parentview"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/x500"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/close"
            android:layout_marginTop="@dimen/y40"
            android:layout_marginRight="@dimen/x30"
            android:layout_gravity="right"
            android:src="@drawable/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/icon"
            android:layout_marginTop="@dimen/y20"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120" />
        <TextView
            android:id="@+id/nickname"
            android:layout_marginTop="@dimen/y90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/RGB_2A2430"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textSize="@dimen/y35"
            />
        <TextView
            android:id="@+id/youmihao"
            android:layout_marginBottom="@dimen/y60"
            android:layout_marginTop="@dimen/y30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/RGB_909090"
            android:layout_gravity="center_horizontal"
            android:text="幽秘号"
            android:textSize="@dimen/y24"
            />
        <LinearLayout
            android:paddingTop="@dimen/y30"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/guanzhu_count"
                android:textColor="@color/RGB_2A2430"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                />
            <TextView
                android:id="@+id/fans_count"
                android:textColor="@color/RGB_2A2430"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                />
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="@dimen/x20"
            android:paddingTop="@dimen/y10"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/RGB_909090"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="关注"
                />
            <TextView
                android:textColor="@color/RGB_909090"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="粉丝"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/RGB_909090"/>
        <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y70">
            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/guanzhu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="关注"

                />
            <View
                android:background="@color/RGB_909090"
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"/>
            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/talk_private"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="私信"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>