.react-date-picker__nav-bar {
  box-sizing: border-box;
  outline: none;
  position: relative;

  *,
  *:before,
  *:after {
    box-sizing: border-box;
  }

  &-arrow {
    user-select: none;
    cursor: pointer;
    position: relative;

    &--disabled {
      fill: #BFBFBF;
      cursor: default;
    }
  }

  &-date {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
  }

  svg {
    vertical-align: middle;
  }

  &-history-view {
    z-index: 100;
    position: absolute;
    margin: auto;
    left: 3px;
    right: 3px;
    top: 100%;
  }

}
