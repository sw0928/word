html, body, #app {
  border: 0;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}

html, body {
	background-image: radial-gradient(circle farthest-corner at center center , @body-bg 0px, @body-bg-radial 100%);
}

/* show this when our app is loading */
#app-loading {
	width: 100%;
	text-align: center;
	background: url('../../images/ajax-loader.gif') no-repeat center 40px;
	padding-top: 100px;
	color: #ccc;
}

.main-seperator {
  background: linear-gradient(to right,
    darken(@brand-primary, 10%) 0%,
    lighten(@brand-primary, 25%) 100%
	);
	margin-top: 5px;
	margin-bottom: 20px;
	height: 5px;
	overflow: hidden;
}

.no-select {
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
}

.squares {
	background-image: url('../../images/gradient_squares.png');
	background-repeat: repeat;
	background-position: center center;
}

.jumbotron, .well {
	border-style: solid;
	border-color: @brand-primary;
	border-width: 3px;
	border-radius: 10px;
	box-shadow: 10px 10px 5px @box-shadow-color;
	.squares;
}
